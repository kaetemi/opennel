select c.char_id,
       c.char_name,
       c.user_id,
       c.guild_id,
       c.rrp_am,c.rrp_masterless,c.rrp_author,
       r.lang
from characters c,ring_users r
where c.user_id = r.user_id
  and r.lang = <dtml-sqlvar language type="string">
order by <dtml-sqlvar ranking_by type="string"> desc



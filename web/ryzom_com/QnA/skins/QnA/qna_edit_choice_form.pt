<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      i18n:domain="cmfquestions"
      metal:use-macro="here/main_template/macros/master">

<body>

<div metal:fill-slot="main" 
     tal:define="errors python:request.get('errors', {});
                 Iterator python:modules['Products.CMFPlone'].IndexIterator;
                 tabindex python:Iterator();
                 PostList here/getPostList">
    
   <h1>Edit Choice</h1>
   <form class="QnA_choice"
         name="edit_form"
         method="post"
         tal:attributes="action string:${here/absolute_url}/qna_edit_choice">        

        <fieldset>
           <tal:options tal:repeat="postkey PostList">
		  <input type="checkbox"
                         class="noborder"
                         name="answer"
                         value="option"                         
                         tal:attributes="value postkey;
                                         name postkey;
                                         tabindex tabindex/next;" />
                  <span tal:content="python: PostList[postkey][3]" />
                  <br />
                  <span tal:content="python: PostList[postkey][0]" />
                  <br />
                  <span tal:content="python: PostList[postkey][1]" />
                  <br />
                  <span tal:content="structure python: here.filtertext(PostList[postkey][2])" />
                  <br />
          </tal:options>          
       </fieldset>

       <input class="context" tabindex="" name="form_submit" value="OK" type="submit">
 </form>
 </div>

</body>
</html>

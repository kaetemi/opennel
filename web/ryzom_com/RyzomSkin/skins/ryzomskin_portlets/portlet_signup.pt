<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">
<body>

<div class="holeContainer" style="text-align : right;" metal:define-macro="portlet">
<img  class="fakeBorder" src="side_top.png" alt="" />
  <dl id="sign-up">	
    <dd class="portletItem">
      <div class="hole">  
      <div tal:define="p string:/ryzom/imgportlet;
                       results python:here.portal_catalog.searchResults(portal_type='Folder', path=p,sort_on='getObjPositionInParent');" >
        <div tal:repeat="obj results" tal:omit-tag="">
          <div tal:define="o python:obj.getObject();t o/id;"
               tal:condition="python:t!=p">
            <div tal:define="ob string:/ryzom/imgportlet/${t};
                             results2 python:here.portal_catalog.searchResults(portal_type='Image', path=ob,)">
              <div tal:repeat="obj2 results2" tal:omit-tag="">
                <div tal:define="res python:here.choice_img(results2);o2 python:res.getObject()"
                     tal:condition="repeat/obj2/end">
                  <a href="" tal:attributes="href o2/Description">
                    <img  src="" alt="" style="margin: 0; padding: 0;" align="center" tal:attributes="src python:o2.absolute_url()" width="185" />
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </dd>
  </dl>
<div class="imageHide">
    <img class="fakeBorder" src="side_up.png" alt="" />
</div>
</div>
</body>
</html>

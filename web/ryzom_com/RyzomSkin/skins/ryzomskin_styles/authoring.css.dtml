.standalone,
.documentEditable * .standalone {
    color: #ccb97e;
    font-size: 11px;
    font-weight: bold;
    background: transparent url('button.gif') no-repeat;
    border: 0;
    white-space: nowrap;
    overflow: hidden;
    width: 150px;
    height: 25px;
    cursor: pointer;
    padding: 1px 1px 1px 23px;
    text-transform: Capitalize;
}
.context,
.documentEditable * .context {
    color: #ccb97e;
    font-size: 11px;
    font-weight: bold;
    background: transparent url('button.gif') no-repeat;

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
  lang="en-US"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="quills">

  <metal:block fill-slot="css_slot">
    <style type="text/css" media="all" tal:content="string:@import url(${portal_url}/Quills.css);">
    </style>
  </metal:block>

  <metal:block fill-slot="head_slot">
    <metal:macro use-macro="here/weblog_macros/macros/feed-links" />
  </metal:block>


  <body>
    <div metal:fill-slot="main" 
         tal:define="parent python:here.quills_tool.getParentWeblog(here)">

<!-- la ligne pour mettre les icone print,envoyer,...langage... -->

      <h1 tal:content="here/title_or_id"></h1>



  <form style="text-align:right; ">

    <select onChange="document.location=this.options[this.selectedIndex].value" tal:define="parent python:here.quills_tool.getParentWeblog(here)">
<option value="parent" tal:attributes="value string:${parent/absolute_url}" i18n:domain="RyzomSkin" i18n:translate="trier_par_rubrique">Toutes les rubriques</option>
      <tal:loop repeat="topic here/getAvailableTopics">

<span tal:condition="python:(parent.absolute_url()+'/'+topic.id)!=here.absolute_url()" >
<option value="lien" tal:attributes="value string:${parent/absolute_url}/${topic/id}" 
        tal:content="topic/title_or_id">topic</option>
</span>

<span tal:condition="python:(parent.absolute_url()+'/'+topic.id)==here.absolute_url()" >
<option value="lien" selected="selected" tal:attributes="value string:${parent/absolute_url}/${topic/id}" 
        tal:content="topic/title_or_id">topic</option>
</span>

      </tal:loop>
      
    </select>
  </form>

<div metal:use-macro="here/document_actions/macros/document_actions"></div>

      <tal:define define="results here/getLazyEntries;">

        <div id="topic-history"
             tal:condition="results">
          <tal:loop repeat="entries results">
            <tal:define define="entry entries/getObject">
              <metal:use use-macro="here/weblog_macros/macros/entry-brief"/>
            </tal:define>
          </tal:loop>
        </div>
      </tal:define>

    </div>
  </body>
</html>

